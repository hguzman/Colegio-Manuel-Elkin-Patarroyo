<div class="row">
    <div class="col-md-12">
    <h1 >Asistencia del dia: <strong class="text-capitalize"> <%=@asistencia.fecha%></strong></h1>
      <div class="card shadow-lg">
            <div class="card-body">
            <div class="box">
                <div class="table-responsive">
                    <table id="show-asistencia" class="table">
                        <thead>
                            <tr>  
                                <th>Identificacion</th>
                                <th>Nombres</th>
                                <th>Segundo nombre</th>
                                <th>Apellidos</th>  
                                <th>Segundo apellido</th>     
                            </tr>
                        </thead>
                        <tr>
                            <% @users.each do |user| %>
                            <td>
                                <%= user.identificacion%>
                            </td>
                            <td>
                                <%= user.primer_nombre%>
                            </td>
                            <td>
                                <%= user.segundo_nombre%>
                            </td>
                            <td>
                                <%= user.primer_apellido %>
                            </td> 
                            <td>
                                <%= user.segundo_apellido%>
                            </td>
                        </tr> 
                        <%end %>

                    </table> 
                </div>
            </div>
        </div>    
    </div>
</div>    
