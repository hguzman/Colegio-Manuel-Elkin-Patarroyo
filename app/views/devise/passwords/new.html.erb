<div class="row">
  <div class="col-md-4 mx-auto mt-3">
    <div class="card shadow-lg">
      <div class="card-body">
        <div class="box">
          <div class="image d-flex justify-content-center">
            <%= image_tag("logo_neopa.jpeg", :alt => "Logo neopa", :style => "width: 120px; height: 120px;border-radius: 55%;")%>
          </div>

            <h2 class="text-center">¿Olvidaste tú contraseña?</h2>

            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.error_notification %>

              <div class="forgetbox">
                <div class="textbox">
                  <i class="fas fa-envelope icon"></i>
                  <input autocomplete="on" placeholder="Correo" class="string email optional input2" autofocus="autofocus" type="email" value="" name="user[email]" id="user_email" />
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-actions">
                      <%= f.button :submit, "Enviar correo", class: "btn btn-warning btn-sm btn-block" %>
                    </div>
                  </div>
                  <div class="col">
                    <%= render "devise/shared/links" %>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
