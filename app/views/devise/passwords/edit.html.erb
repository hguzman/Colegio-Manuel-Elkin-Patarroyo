<div class="row">
  <div class="col-md-3 mt-5 mx-auto">
    <div class="card">
      <div class="card-body">
        <div class="box">
          <div class="image d-flex justify-content-center">
            <%= image_tag("logo_neopa.jpeg", :alt => "Logo neopa", :style => "width: 120px; height: 120px;border-radius: 55%;")%>
          </div>
          <h2 class="text-center">Cambiar contrase単a</h2>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
            <%= f.input :password,
                        label: "Nueva contrase単a",
                        required: false,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmar nueva contrase単a",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="row">
            <div class="col"><%= f.button :submit, "Cambiar contrase単a", class: "btn btn-primary btn-sm btn-block" %></div>
            <div class="col"><%= render "devise/shared/links" %></div>
          </div>
            
          <% end %>

          
        </div>
      </div>
    </div>
  </div>
</div>



