<div class="container p-3 mt-20">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card shadow">
        <div class="card-body">
          <div class="box">
              <div class="image d-flex justify-content-center">
                <%= image_tag("logo_neopa.jpeg", :alt => "Logo neopa", :style => "width: 120px; height: 120px;border-radius: 55%;")%>
              </div>
              <h2 class="text-center">Inicio de sesión</h2>
              <div class="login-box">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">

                  <div class="textbox">
                    <i class="fas fa-user icon"></i>
                    <input autocomplete="on" placeholder="Correo" class="string email optional input2" autofocus="autofocus" type="email" value="" name="user[email]" id="user_email" />
                  </div>

                  <div class="textbox">
                    <i class="fas fa-key icon"></i>
                    <input autocomplete="current-password" placeholder="Contraseña" class="password optional input2" type="password" name="user[password]" id="user_password" />
                  </div>

                  </div>

                  <div class="form-actions">
                     <button class="logbtn">Iniciar sesión</button>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
              </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
