<div class="row">
    <div class="col-md-12">
    <h1 >Estudiantes del curso: <strong class="text-capitalize"> <%=@curso.nombre%></strong></h1>
    <!-- Inicio de asistencia -->
    <% if current_user.has_role? :admin %>
        <%= link_to new_asistencia_path, class:"btn btn-warning btn-sm mb-2" do %>Asistencia
        <%= fa_icon "plus" %>
        <% end %>

        <%= link_to asistencias_path, class:"btn btn-warning btn-sm mb-2" do %>Ver asistencia
        <%= fa_icon "eye" %>
        <% end %>
    <% elsif current_user.has_role? :docente  %>    
        <%= link_to new_asistencia_path, class:"btn btn-warning btn-sm mb-2" do %>Asistencia
        <%= fa_icon "plus" %>
        <% end %>

        <%= link_to asistencias_path, class:"btn btn-success btn-sm mb-2" do %>Ver asistencia
        <%= fa_icon "eye" %>
        <% end %>
    <% end %>  
    <!-- Fin de asistencia -->  
