
<%= link_to new_curso_path, class: "btn btn-info btn-sm mb-3" do %>
  Registrar Curso
  <%= fa_icon "plus" %>
<% end %>


  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="card shadow-lg">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
                <tr>
                  <thead class="thead-dark">
                    <% if @cursos.empty? %>
                      <th>Codigo</th>
                      <th>Nombre</th>
                    <% else %>
                      <th>Codigo</th>
                      <th>Nombre</th>
                      <th colspan="3">Acciones</th>
                    <% end %>
                  </thead>
                </tr>
              <% @cursos.each do |curso|  %>
                <tr>
                  <td> <%= curso.codigo %> </td>
                  <td> <%= curso.nombre %> </td>

                  <td>
                    <%= link_to curso_path(curso), class:"btn btn-success btn-sm" do %>
                      <%= fa_icon "eye" %>
                      Mostrar
                    <% end %>
                  </td>

                  <td>
                    <%= link_to edit_curso_path(curso), class: "btn btn-warning btn-sm" do %>
                      <%= fa_icon('pencil') %>
                      Editar
                    <% end %>
                  </td>

                  <td>
                    <%= link_to curso_path(curso),method: :delete,class: "btn btn-danger btn-sm", data: {confirm:"Â¿Desae eliminar este curso?"} do %>
                      <%= fa_icon "trash" %>
                      Eliminar
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>
