<h2 class="text-center">Todas las materias</h2>
 <% if current_user.has_role? :admin %>
    <%= link_to new_materia_path(@materia), class: "btn btn-info btn-sm mb-3" do %>
    Nueva Materia
    <%= fa_icon "plus" %>
    <% end %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="box">
                    <div class="table-responsive">
                        <table id="materias" class="table table-bordered table-striped table-hover">
                            <thead>
                                    <th>Codigo</th>
                                    <th>Materia</th>
                                    <th class="text-success">Mostrar</th>
                                    <th class="text-warning">Editar</th>
                                    <th class="text-danger">Eliminar</th>      
                            </thead>
                            <tbody>
                                <%= render @materias %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
