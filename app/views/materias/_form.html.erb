
<div class="row">
  <div class="col-md-6 mx-auto mt-3">
    <div class="card">
      <div class="card-body">
        <div class="box">
          <%= simple_form_for @materia do |a| %>
           <%= a.input :codigo %>
          <%= a.input :nombre %>
          <%= a.association :users, as: :check_boxes, label_method: :email%>
          <%= a.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
