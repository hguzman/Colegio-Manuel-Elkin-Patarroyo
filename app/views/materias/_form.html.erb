
<div class="row">
  <div class="col-md-6 mx-auto mt-3">
    <div class="card">
      <div class="card-body">
        <div class="box">
          <%= simple_form_for @materia do |a| %>
           <%= a.input :codigo %>
          <%= a.input :nombre %>
          <div class="row">
            <div class="col"><%= a.association :curso,prompt:"Seleccionar curso", label_method: :nombre%></div>
            <div class="col"><%= a.association :user,prompt:"Seleccionar docente", label_method: :email%></div>
          </div>
          <%= a.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
