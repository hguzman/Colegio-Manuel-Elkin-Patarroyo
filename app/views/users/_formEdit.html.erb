<div class="row">
    <div class="col-md-7 mx-auto mt-5">

        <div class="card shadow-lg">
            <div class="card-body">
                <div class="box">
                    <h2 class="text-success text-center">Editar usuario</h2>
                    <%= simple_form_for @user do |f| %>

                    <h4>Datos Personales</h4>
                    <%= f.input :identificacion %>
                    <div class="row">
                        <div class="col"><%= f.input :primer_nombre%></div>
                        <div class="col"><%= f.input :segundo_nombre%></div>
                    </div>

                    <div class="row">
                        <div class="col"><%= f.input :primer_apellido %></div>
                        <div class="col"><%= f.input :segundo_apellido %></div>
                    </div>

                    <h4>Información de contacto</h4>
                    <div class="row">
                        <div class="col"><%= f.input :telefono %></div>
                        <div class="col"><%= f.input :direccion %></div>
                    </div>
                     <%= f.input :avatar %>
                    <%= f.input :email %>

                    <h4>Añadir rol</h4>
                    <%= f.association :roles , as: :check_boxes    %>



                    <%= f.button :submit, class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>