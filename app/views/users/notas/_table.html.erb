<div class="row">
  <div class="col-md-12">
    <div class="card shadow-lg">
      <div class="card-body">
        <div class="box">
          <div class="table-responsive">
            <table class="table">
              <thead class="thead-dark">
                <% if @nota.empty?%>
                  <th>Logro</th>
                  <th>Nota</th>
                <% else %>
                  <th>Logro</th>
                  <th>Nota</th>
                  <th colspan="3">Acciones</th>
                <% end %>
              </thead>
              <tbody>
                <% @nota.each do |nota| %>
                <tr>

                  <td> <%= nota.logro %> </td>
                  <td> <%= nota.nota %> </td>
                  <!-- Mostrar -->


                  <td>
                    <%= link_to user_nota_path(@user, nota), class:"btn btn-success btn-sm" do %>
                      <%= fa_icon "eye" %>
                      Mostrar
                    <% end %>
                  </td>


                  <!-- Editar -->
                  <td>
                    <%= link_to  edit_user_nota_path(@user, nota), class: "btn btn-warning btn-sm" do %>
                      <%= fa_icon "pencil-alt" %>
                      Editar
                    <% end %>
                  </td>
                  <!-- Eliminar -->
                  <td>
                    <%= link_to user_nota_path(@user, nota), class: "btn btn-danger btn-sm" , method: :delete, data: {confirm: "Ojo!!"} do %>
                      <%= fa_icon "trash" %>
                      Eliminar
                    <% end %>
                  </td>

                </tr>
                <% end %>
              </tbody>
            </table
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
