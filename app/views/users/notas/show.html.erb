
<div class="row">
  <div class="col-md-5 mx-auto mt-5">
    <div class="card shadow-lg">
      <div class="card-body">
        <div class="box">
          <h2>Datos de la nota</h2>
          <div>
            <p><strong>Logro:</strong> <%= @nota.logro %></p>
            <p><strong class="mr-1">Nota:</strong><%= @nota.nota%></p>
          </div>
          <div class="row">
            <div class="col">
              <%= link_to "Atras", user_notas_path, class: "btn btn-primary btn-block" %>
            </div>
            <div class="col">
              <%= link_to "Editar", edit_user_nota_path(@user, @nota), class: "btn btn-warning btn-block" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>