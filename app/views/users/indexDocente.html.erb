<%= link_to new_user_path, class: "btn btn-info btn-sm mb-3" do %>
  Registrar Docente
  <%= fa_icon "plus" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-lg">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
              <tr>
                <thead class="thead-dark">
                  <% if @users.empty? %>
                    <th>Email</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Email</th>
                    <th>Acciones</th>
                  <% else %>
                    <th>Email</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Email</th>
                  <% end %>
                </thead>
              </tr>
            <% @users.each do |user|  %>
               <% if user.has_role? :docente %>
                <tr>
                  <td> <%= user.email %> </td>
                  <td> <%= user.nombre %> </td>
                  <td> <%= user.apellido %> </td>
                   <td> <%= user.direccion %> </td>
                    <td> <%= user.telefono %> </td>
                     <td> <%= user.email %> </td>
                  <td>
                  <%= link_to user_path(user), class:"btn btn-success btn-sm" do %>
                    <%= fa_icon "eye" %>
                    Mostrar
                  <% end %>

                  <%= link_to edit_user_path(user), class: "btn btn-warning btn-sm" do %>
                    <%= fa_icon('pencil') %>
                    Editar
                  <% end %>

                  <%= link_to user_path(user),method: :delete,class: "btn btn-danger btn-sm", data: {confirm:"Â¿Desae eliminar este estudiante?"} do %>
                    <%= fa_icon "trash" %>
                    Eliminar
                  <% end %>
                </td>
                </tr>
               <% end %>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
